@model proiect.Models.Group

<link href="~/css/editGroup.css" rel="stylesheet" />

<div class="edit-group-container">
    <h2 class="text-center">Editează grupul</h2>

    <form method="post" class="edit-group-form">
        <input type="hidden" id="GroupId" name="GroupId" value="@Model.GroupId" />

        <div class="form-group">
            <label for="GroupName">Numele grupului</label>
            <input type="text" id="GroupName" name="GroupName" class="form-control" value="@Model.GroupName" required />
        </div>

        <div class="form-group">
            <label for="GroupDescription">Descrierea grupului</label>
            <textarea id="GroupDescription" name="GroupDescription" class="form-control" required>@Model.GroupDescription</textarea>
        </div>

        <div class="form-group">
            <label for="Max">Număr maxim de participanți</label>
            <input type="number" id="Max" name="Max" class="form-control" value="@Model.Max" min="3" max="1000" required />
        </div>

        <div class="mb-3">
            <label for="Visibility" class="form-label">Vizibilitate</label>
            <div class="form-check">
                <input type="radio" id="Public" class="form-check-input" name="Private" value="false" @(!Model.Private ? "checked" : "") />
                <label for="Public" class="form-check-label">Public</label>
            </div>
            <div class="form-check">
                <input type="radio" id="Private" class="form-check-input" name="Private" value="true" @(Model.Private ? "checked" : "") />
                <label for="Private" class="form-check-label">Privat</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Actualizează grupul</button>
    </form>

    <a class="btn btn-secondary" asp-action="Index">Înapoi la lista grupurilor</a>
</div>
