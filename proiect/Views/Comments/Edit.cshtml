@model proiect.Models.Comment


<h2>Editare comentariu</h2>
<br />


<form asp-action="Edit" asp-controller="Comments" asp-route-id="@Model.CommentId" method="post">

    <div class="form-group">
        <label asp-for="CommentContent" class="form-label">Conținut comentariu</label>
        <br />
        <textarea asp-for="CommentContent" class="form-control"></textarea>
        <span asp-validation-for="CommentContent" class="text-danger"></span>
    </div>

    <br /><br />

    <button class="btn btn-primary" type="submit">Editează comentariul</button>

</form>