@model proiect.Models.ApplicationUser

<h2>Creează utilizator</h2>

<form asp-action="New" method="post">
    <div class="mb-3">
        <label for="UserFirstName" class="form-label">Prenume</label>
        <input type="text" class="form-control" id="UserFirstName" name="UserFirstName" required />
    </div>
    <div class="mb-3">
        <label for="UserLastName" class="form-label">Nume</label>
        <input type="text" class="form-control" id="UserLastName" name="UserLastName" required />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <button type="submit" class="btn btn-success">Salvează</button>
    <a class="btn btn-secondary" asp-action="Index">Anulează</a>
</form>
